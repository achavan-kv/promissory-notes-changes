@model Blue.Cosacs.Web.Areas.Service.Models.Resolution
           
<tr data-id="@Model.Id" class="edit">
    @if (Html.HasPermission(Blue.Service.ServicePermissionEnum.EditResolution))
     {
        <td class="actions"></td>
     }
    <td colspan="2">
        @using (Html.BeginForm("RecordEdit", "Resolutions", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="col-lg-12">
                <div class="form-group">
                    <label for="Description" class="col col-lg-3 control-label">Description</label>
                    <div class="col-lg-7">
                        @Html.TextBoxFor(m => m.Description, new { @class="form-control form-horizontal" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Fail" class="col col-lg-3 control-label">Fail</label>
                    <div class="col-lg-7">
                        @Html.CheckBoxFor(m => m.Fail, new { @class="form-control form-horizontal" })
                    </div>
                </div>
            </div>
        }
    </td>
</tr>