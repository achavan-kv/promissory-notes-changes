@model IEnumerable<Blue.Cosacs.Service.SummaryPrintView>

@{
    ViewBag.Title = "Summary Print";
    Layout = "~/Views/Shared/_Print.cshtml";
}

<div>
    <h2>@ViewBag.Title</h2>
</div>

<table class="summaryTable">
    <thead>
        <tr>
            <td style="width: 10%; text-align:right">Service Request</td>
            <td style="width: 10%; text-align:center">Status</td>
            <td style="width: 20%; text-align:center">Date Logged</td>
            <td style="width: 10%; text-align:center">Days Outstanding</td>
            <td style="width: 20%; text-align:center">Date Changed</td>
            <td style="width: 10%">Customer Charge Account</td>
            <td style="width: 10%">Deposit Paid</td>
            <td style="width: 10%">Allow Charge Account Cancellation</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td style="text-align:right">@item.RequestId</td>
            <td style="text-align:center">@item.Status</td>
            <td>@item.CreatedOn</td>
            <td style="text-align:center">@item.DaysOutstanding</td>
            <td>@item.LastUpdatedOn</td>
            <td>@item.CustomerChargeAcct</td>
            <td>@item.DepositPaid</td>
            <td>@item.ChargeAcctCancel</td>
        </tr>
        }
    </tbody>
</table>


