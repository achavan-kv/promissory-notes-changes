@model IEnumerable<Blue.Cosacs.Web.Areas.Service.Models.ServiceSupplier>
@using Blue.Service
@{ ViewBag.Title = "Service Suppliers"; }
<div data-module="form-inline" data-controller="ServiceSuppliers" data-label="ServiceSuppliers">
    <div class="row">
        <div class="col-lg-8">
            <form class="search form-horizontal" method=get action='@Url.Action("Index", "ServiceSuppliers")'>
                <div class="row">
                    <div class="col-lg-4">
                        @Html.TextBox("s.Supplier", null,
                                      new { @class = "form-control", placeholder="Supplier" })
                    </div>
                    <div class="col-lg-8">
                        <button type="submit" class="btn btn-default">Search</button>
                    </div>
                </div>
            </form>
            <br>
            <table class="data table table-striped table-bordered table-hover" onsubmit="return false;">
                <thead>
                    <tr>
                        @if (Html.HasPermission(ServicePermissionEnum.ServiceSupplierEdit))
                        {
                        <th class="col-2"></th>
                        }
                        <th>Supplier</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                    @Html.Partial("RecordView", item)
                }
                </tbody>
                @if (Html.HasPermission(ServicePermissionEnum.ServiceSupplierEdit))
                {
                <tfoot>
                <tr>
                    <td class="actions"></td>
                    <td colspan="2">&nbsp;</td>
                </tr>
                </tfoot>
                }
            </table>
        </div>
        <div class="col-lg-4">
        </div>
    </div>
    <script id="templateNew" type="text/template">
        @Html.Partial("RecordEdit", ViewData["DefaultNew"])
    </script>
</div>