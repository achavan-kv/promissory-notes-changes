<div data-module="merchandising/stockTransfer/init" ng-controller="StockTransferSearchCtrl" ng-cloak class="buffer-sm bottom">
    <div class="buffer-sm top" ng-form="searchForm">
        <div class="row buffer-sm bottom">
            <div class="col-lg-12">
                <div class="pull-right">
                    <button id="buttonClear" class="clear btn btn-default" ng-click="paginator.reset()">Clear</button>
                    <button class="btn btn-primary" ng-click="paginator.get()" ng-disabled="paginator.loading()">Search</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <div class="form-group">
                    <label for="id">Stock Transfer Id</label>
                    <input class="form-control" pb-integer name="id" ng-model="query.id"/>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label for="sku">Involves SKU</label>
                    <input class="form-control" name="sku" ng-model="query.sku"/>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label for="createdFrom">Created From</label>
                    <input class="form-control" name="createdFrom" ng-model="query.createdFrom" type="date" placeholder="Select Date"/>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label for="createdTo">Created To</label>
                    <input class="form-control" name="createdTo" ng-model="query.createdTo" type="date" placeholder="Select Date"/>
                </div>
            </div>
        </div>
        <div class="row buffer-sm bottom">
            <div class="col-lg-3">
                <label for="type">Type</label>
                <list name="type" ng-model="query.type" scope="types" placeholder="Select a Type"></list>
            </div>
            <div class="col-lg-3">
                <label for="sendingLocation">Sending Location</label>
                <list name="sendingLocation" ng-model="query.sendingLocationId" scope="locations" placeholder="Select a Location"></list>
            </div>
            <div class="col-lg-3">
                <label for="receivingLocation">Receiving Location</label>
                <list name="receivingLocation" ng-model="query.receivingLocationId" scope="locations" placeholder="Select a Location"></list>
            </div>
            <div class="col-lg-3">
                <label for="viaLocation">Via Location</label>
                <list name="viaLocation" ng-model="query.viaLocationId" scope="locations" placeholder="Select a Location"></list>
            </div>
        </div>
        <div class="row buffer bottom">
            <div class="col-lg-3">
                <label for="referenceNumber">Document Reference Number</label>
                <input class="form-control" name="referenceNumber" ng-model="query.referenceNumber" />
            </div>
        </div>
        <pb-pagination get="search" params="query" control="paginator" no-results-message="There are no results matching the query.">
            <table class="table table-striped table-bordered table-hover table-responsive active pb-table pb-search">
                <thead>
                <tr>
                    <th class="col-sm">Stock Transfer Id</th>
                    <th class="col-sm">Sending Location</th>
                    <th class="col-sm">Receiving Location</th>
                    <th class="col-sm">Via Location</th>
                    <th class="col-sm">Document Reference Number</th>
                    <th class="col-sm date">Created On</th>
                    <th class="col-sm">Created By</th>
                    <th class="col-sm">Comments</th>
                    <th class="col-sm">Total</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="result in paginator.page">
                    <td class="text-right"><a href="{{resolve('Merchandising/StockTransfer/Detail/') + result.id}}">#{{result.id}}</a></td>
                    <td><a href="{{resolve('Merchandising/Locations/Detail/') + result.sendingLocationId}}">{{result.sendingLocation}}</a></td>
                    <td><a href="{{resolve('Merchandising/Locations/Detail/') + result.receivingLocationId}}">{{result.receivingLocation}}</a></td>
                    <td><a href="{{resolve('Merchandising/Locations/Detail/') + result.viaLocationId}}">{{result.viaLocation}}</a></td>
                    <td>{{result.referenceNumber}}</td>
                    <td class="date">{{result.createdDate | pbDate : true}}</td>
                    <td>{{result.createdBy}}</td>
                    <td><p class="pb-text" pb-ref-link ng-model="result.comments"></p></td>
                    <td class="currency">{{result.total | pbCurrency}}</td>
                </tr>
                </tbody>
            </table>
        </pb-pagination>
    </div>
</div>
