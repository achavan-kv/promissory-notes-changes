@model IEnumerable<Blue.Cosacs.Web.Areas.Warehouse.Models.Driver>
@{ ViewBag.Title = "Drivers"; }
<div data-module="form-inline" data-controller="Drivers" data-label="Driver">
    <div class="row">
        <div class="col-lg-8">
            <form class="search form-horizontal" method=get action='@Url.Action("Index", "Drivers")'>
                <div class="row">
                    <div class="col-lg-4">
                        @Html.TextBox("s.Name", null, new { @class="form-control", placeholder="Name" })
                    </div>
                    <div class="col-lg-8">
                        <button type="submit" class="btn btn-default">Search</button>
                    </div>
                </div>
            </form>
            <br>
            <table class="data table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                    @if (Html.HasPermission(Blue.Cosacs.Warehouse.Common.WarehousePermissionEnum.DriverMaintenanceEdit))
                    {
                        <th class="col-2"></th>
                    }
                        <th>Name</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        @Html.Partial("RecordView", item)
                    }
                </tbody>
                @if (Html.HasPermission(Blue.Cosacs.Warehouse.Common.WarehousePermissionEnum.DriverMaintenanceEdit))
                {
                <tfoot>
                    <tr>
                        <td class="actions"></td>
                        <td colspan="2">&nbsp;</td>
                    </tr>
                </tfoot>
                }
            </table>
        </div>
        <div class="col-lg-4">
        </div>
    </div>
    <script id="templateNew" type="text/template">
        @Html.Partial("RecordEdit", ViewData["DefaultNew"])
    </script>
</div>