@model Blue.Cosacs.Web.Areas.Warehouse.Models.Truck
<tr data-id="@Model.Id" class="edit">
@if (Html.HasPermission(Blue.Cosacs.Warehouse.Common.WarehousePermissionEnum.TruckMaintenanceEdit))
{
    <td class="actions"></td>
}
    <td colspan="4">
        @using (Html.BeginForm("RecordEdit", "Trucks", FormMethod.Post, new { @class = "form-horizontal" }))
        {
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group row">
                    <label for="Name" class="col-lg-3 control-label">Name</label>
                    <div class="col-lg-7">
                        @Html.TextBoxFor(m => m.Name, new { @class="form-control form-horizontal", name="Name", required="" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Branch" class="col-lg-3 control-label">Branch</label>
                    <div class="col-lg-7">
                        <div class="pickListInputValidationClass input-validation-error">
                        @Html.TextBoxFor(m => m.Branch, new { @class = "picklist", data_pick_list_id="BRANCH",
                                                              data_placeholder="Select a Delivery Branch" })
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Size" class="col-lg-3 control-label">Size</label>
                    <div class="col-lg-7">
                        <div class="pickListInputValidationClass input-validation-error">
                        @Html.TextBoxFor(m => m.Size, new { @class = "picklist", data_pick_list_id="Blue.Cosacs.Warehouse.TRUCKSIZE",
                                                              data_placeholder="Select a Truck Size" })
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Driver" class="col-lg-3 control-label">Driver</label>
                    <div class="col-lg-7">
                        <div class="pickListInputValidationClass input-validation-error">
                        @Html.TextBoxFor(m => m.DriverId, new { @class = "picklist", data_pick_list_id="Driver",
                                                                data_placeholder="Select a Driver" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </td>
</tr>