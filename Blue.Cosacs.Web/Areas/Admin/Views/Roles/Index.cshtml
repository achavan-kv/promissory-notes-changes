@model IEnumerable<Blue.Cosacs.Web.Areas.Admin.Models.Role>
@{ ViewBag.Title = "Roles"; }
<div data-module="form-inline" data-controller="Roles" data-label="Role">
    <div class="row">
        <div class="col-lg-9">
            <form class=search method=get action='@Url.Action("Index", "Roles")'>
                <div class="row">
                    <div class="col-lg-4">
                        @Html.TextBox("s.Name", null, new{ @class = "form-control", placeholder = "Type a role name" })
                    </div>
                    <div class="col-lg-8">
                        <button type="submit" class="btn btn-default">Search</button>
                    </div>
                </div>
            </form>
            <br>
            <table class="data table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        @if (HttpContext.Current.GetUser().HasPermission(Blue.Admin.AdminPermissionEnum.EditRoles)) {
                        <th class="col-2"></th>
                        }
                        <th>Name</th>
                        <th class="col-2"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        @Html.Partial("RecordView", item)
                    }
                </tbody>
                <tfoot>
                    @if (HttpContext.Current.GetUser().HasPermission(Blue.Admin.AdminPermissionEnum.EditRoles)) {
                    <tr>
                        <td class="actions"></td>
                        <td colspan="2">&nbsp;</td>
                    </tr>
                    }
                </tfoot>
            </table>
            <br>
        </div>
    </div>
    <script id="templateNew" type="text/template">
        @Html.Partial("RecordEdit", ViewData["DefaultNew"])
    </script>
</div>