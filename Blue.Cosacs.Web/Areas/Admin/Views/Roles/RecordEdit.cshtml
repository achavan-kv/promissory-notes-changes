@model Blue.Cosacs.Web.Areas.Admin.Models.Role
<tr data-id="@Model.Id" class="edit">
    <td class="actions"></td>
    <td colspan="2">
    @using (Html.BeginForm("RecordEdit", "Roles", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="col-lg-12">
            <div class="form-group">
                <div class="col-lg-7 col-offset-1">
                    @Html.TextBoxFor(m => m.Name, new { @class="form-control form-horizontal" })
                </div>
            </div>
        </div>
    }
    </td>
</tr>