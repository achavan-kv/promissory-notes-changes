
@model Blue.Cosacs.Web.Areas.Admin.Models.AddressMaster

<tr data-id="@Model.Id" class="edit">
    @if (Html.HasPermission(Blue.Service.ServicePermissionEnum.AddressMasterManage))
    {
        <td class="actions"></td>
    }
    <td colspan="3">
        @using (Html.BeginForm("RecordEdit", "AddressMaster", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="col-lg-12">
                <div class="form-group">
                    <label for="Region" class="col col-lg-3 control-label">Region / Parish</label>
                    <div class="col-lg-7">
                        @Html.TextBoxFor(m => m.Region, new { @class = "form-control form-horizontal" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Village" class="col col-lg-3 control-label">Village</label>
                    <div class="col-lg-7">
                        @Html.TextBoxFor(m => m.Village, new { @class = "form-control form-horizontal" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="ZipCode" class="col col-lg-3 control-label">Zip Code</label>
                    <div class="col-lg-7">
                        @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control form-horizontal" })
                    </div>
                </div>
            </div>
        }
    </td>
</tr>