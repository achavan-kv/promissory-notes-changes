@section Head
{
    <style type="text/css">
       

       .fill .fixedwidth{ text-align: left; }  
    </style>
}

@model Blue.Cosacs.SCAgreement
@{ 
    Layout = "~/Views/Shared/_Print.cshtml";
    ViewBag.Title = "StoreCard Agreement";
}

<div class="logo">
    <img src="@Url.Content("~/static/images/logo.png")" alt="Logo" />
</div>
<div class="clear">
</div>
<div id="header">
    <h2 class="centre" style="width: 100%">
        Courts Store Card Agreement
    </h2>
</div>

<table class="fill">
<tr>
        <td class="fixedwidth">
            Name:
        </td>
        <td>
            @String.Format("{0} {1} {2}", Model.Customer.title, Model.Customer.firstname, Model.Customer.name)
        </td>
        
    </tr>
    <tr>
        <td class="fixedwidth">
            Date of Birth:
        </td>
        <td>@Model.Customer.dateborn.ToShortDateString()
        </td>
        
    </tr>
    <tr>
        <td class="fixedwidth">
            Marital Status:
        </td>
        <td>@Model.MartialStatus
        </td>
        
    </tr>
</table>
